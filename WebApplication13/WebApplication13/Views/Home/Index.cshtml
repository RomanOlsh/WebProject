@model IEnumerable<WebApplication13.Models.ViewModels.Citizen>

@{
    ViewBag.Title = "Index";
}

<h2>Citizens</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    function getconfirmid(tznum) {
        return confirm('Are you sure to delete this ID: ' + tznum + ' permanently!!!');
    }
    function myalert(msg) {
        $(document).ready(function () {
            alert(msg);
        });
    }
</script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<script> @Html.Raw(ViewBag.scrptstr) </script>
<table class="table">
    
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.lname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fname)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>

        <th>Actions</th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fname)
                </td>

                <td>
                    @*@Html.DisplayFor(modelItem => item.email)*@
                    @Html.FormatValue(item.email,"{0}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>
                    @Html.ActionLink("Edit", "UpdateCitizen", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "CitizenByID", new { tz = item.tz }) |
                    @Html.ActionLink("Delete", "Delete", new { tz = item.tz }, new { onclick = "return getconfirmid("+item.tz+");" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="5"> No data arrived </td></tr>
    }
</table>
