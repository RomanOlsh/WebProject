@model mySite.Models.user

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="margin-left:auto; margin-right:auto;width:500px; background-color:antiquewhite">
        <legend>user</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.userLogin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.userLogin)
            @Html.ValidationMessageFor(model => model.userLogin)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.userPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.userPassword)
            @Html.ValidationMessageFor(model => model.userPassword)
        </div>

        
        <p>
            <input type="submit" value="logmein" />&nbsp;<input type="Reset" value="reset" />
        </p>
    </fieldset>
}

@Html.ActionLink("Join my site", "adduser")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
